@model List<CategoryModel>

<h2>Welcome to Category Page</h2>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>IsActive</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.IsActive</td>
                <td>
                    <a href="/Category/Edit?id=@item.Id" class="btn btn-success">Edit</a> | 
                    <a href="/Category/Delete?id=@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>